{
  "data": [
    {
      "page": "*",
      "excludes": "",
      "event": "page-view",
      "trigger": "pageload",
      "description": "Tracks page views across the entire site"
    },
    {
      "page": "/products/*",
      "excludes": "",
      "event": "product-view",
      "trigger": "pageload",
      "description": "Tracks product page views"
    },
    {
      "page": "/cart",
      "excludes": "",
      "event": "cart-view",
      "trigger": "pageload",
      "description": "Tracks cart page views"
    },
    {
      "page": "/checkout",
      "excludes": "",
      "event": "checkout-view",
      "trigger": "pageload",
      "description": "Tracks checkout page views"
    },
    {
      "page": "*",
      "excludes": "",
      "event": "add-to-cart-click",
      "trigger": "click",
      "element": ".add-to-cart, button[data-action='add-to-cart']",
      "preventDefaultAction": true,
      "beaconDelay": 150,
      "description": "Tracks add to cart button clicks with default action prevention"
    },
    {
      "page": "*",
      "excludes": "",
      "event": "cta-click",
      "trigger": "click",
      "element": ".cta-button, a.button",
      "preventDefaultAction": true,
      "beaconDelay": 100,
      "description": "Tracks CTA button clicks with navigation tracking"
    },
    {
      "page": "*",
      "excludes": "",
      "event": "nav-link-click",
      "trigger": "click",
      "element": "header a, nav a",
      "preventDefaultAction": true,
      "beaconDelay": 100,
      "description": "Tracks header/nav link clicks before navigation"
    },
    {
      "page": "/checkout",
      "excludes": "",
      "event": "checkout-submit",
      "trigger": "click",
      "element": "button[type='submit'], input[type='submit']",
      "preventDefaultAction": true,
      "beaconDelay": 200,
      "description": "Tracks form submissions with longer delay for reliability"
    },
    {
      "page": "*",
      "excludes": "",
      "event": "sign-in-click",
      "trigger": "click",
      "element": ".sign-in-button, a[href*='sign-in']",
      "preventDefaultAction": true,
      "beaconDelay": 100,
      "description": "Tracks sign-in button/link clicks"
    },
    {
      "page": "*",
      "excludes": "",
      "event": "footer-link-click",
      "trigger": "click",
      "element": "footer a",
      "preventDefaultAction": false,
      "description": "Tracks footer links without preventing default (for demonstration)"
    }
  ]
}
